<playercorefactory>
  <players>
    <!-- VLC for Android -->
    <player name="VLC_Linux" type="ExternalPlayer" audio="false" video="true">
      <filename>/usr/bin/vlc</filename>
      <args>--fullscreen "{1}"</args>
      <hidexbmc>true</hidexbmc>
      <playcountminimumtime>120</playcountminimumtime>
    </player>
  </players>
  <rules action="prepend">
    <!-- Force Android player -->
    <rule name="VLC on Linux" player="VLC_Linux"/>
  </rules>
</playercorefactory>