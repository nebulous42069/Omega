<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>61</defaultcontrol>
	<controls>
		<include>fade_screen_grey</include>
		<control type="group">
			<posx>360</posx>
			<posy>80</posy>
			<include>dialog_zoom_animation</include>
			<visible>!Window.IsVisible(addonsettings)</visible>
			<include content="big_dialog">
				<param name="info_posy" value="2000" />
				<param name="content_posy" value="80" />
				<param name="content_height" value="880" />
				<param name="bottom_posy" value="2000" />
			</include>
			<control type="label" id="1">
				<description>Item Title value</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>1200</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<textcolor>white</textcolor>
			</control>
			<control type="textbox" id="5">
				<description>textarea</description>
				<posx>50</posx>
				<posy>100</posy>
				<width>1100</width>
				<height>830</height>
				<label></label>
				<font>font-19</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>61</pagecontrol>
			</control>
			<control type="scrollbar" id="61">
				<description>Next page button</description>
				<posx>1180</posx>
				<posy>100</posy>
				<width>10</width>
				<height>830</height>
				<include>scroll_bar</include>
				<onleft>6</onleft>
				<onright>5</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>
