<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonmenu">
	<defaultcontrol always="true">6000</defaultcontrol>
	<controls>
		<include>fade_screen_grey</include> 
		<control type="group">
			<posx>675</posx>
			<animation effect="slide" end="0,120" time="0" condition="!System.CanSuspend">Conditional</animation>
			<posy>215</posy>
			<include>dialog_zoom_animation</include>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>570</width>
				<height>80</height>
				<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
			</control>
			<control type="label">
				<description>heading label</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>570</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<label>31152</label>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<left>0</left>
				<top>-10</top>
				<width>570</width>
				<height>10</height>
				<texture flipy="true">shadow_horizontal.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>80</posy>
				<width>570</width>
				<height>575</height>
				<texture background="true" flipy="false">dialogs/long_grey.png</texture>
				<visible>System.CanSuspend</visible>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>80</posy>
				<width>570</width>
				<height>300</height>
				<texture background="true" flipy="false">dialogs/long_grey.png</texture>
				<visible>!System.CanSuspend</visible>
			</control>
			
			<!-- Close Button -->
			<include content="close_button"><param name="posx" value="22" /><param name="posy" value="24" /></include>
			<!-- Info line -->
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>80</posy>
				<width>570</width>
				<height>60</height>
				<texture background="true">dialogs/long_grey.png</texture>
			</control>
			<control type="label">
				<left>10</left>
				<top>90</top>
				<width>550</width>
				<height>52</height>
				<font>font-20</font>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<textcolor>grey_b</textcolor>
				<label>$INFO[System.FriendlyName]$INFO[Network.IPAddress, - ]</label>
			</control>

			<control type="image">
				<left>0</left>
				<top>80</top>
				<width>570</width>
				<height>10</height>
				<texture>shadow_horizontal.png</texture>
			</control>

			<include content="left_shadow" condition="System.CanSuspend">
				<param name="posx" value="-10" />
				<param name="posy" value="0" />
				<param name="width" value="10" />
				<param name="height" value="655" />
			</include>
			<include content="left_shadow" condition="!System.CanSuspend">
				<param name="posx" value="-10" />
				<param name="posy" value="0" />
				<param name="width" value="10" />
				<param name="height" value="380" />
			</include>
			<include content="right_shadow" condition="System.CanSuspend">
				<param name="posx" value="570" />
				<param name="posy" value="0" />
				<param name="width" value="10" />
				<param name="height" value="655" />
			</include>
			<include content="right_shadow" condition="!System.CanSuspend">
				<param name="posx" value="570" />
				<param name="posy" value="0" />
				<param name="width" value="10" />
				<param name="height" value="380" />
			</include>
			<!-- Bottom Shadow -->
			<control type="image">
				<left>0</left>
				<top>655</top>
				<width>570</width>
				<height>20</height>
				<texture>shadow_horizontal.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
				<animation effect="slide" end="0,-265" time="0" condition="!System.CanSuspend">Conditional</animation>
			</control>
			
			<control type="grouplist" id="6000">
				<posx>10</posx>
				<posy>150</posy>
				<width>550</width>
				<include condition="System.CanSuspend">shutdown_dialog_long</include>
				<include condition="!System.CanSuspend">shutdown_dialog_short</include>
				<onup>6000</onup>
				<ondown>6000</ondown>
				<onleft>Close</onleft>
				<onright>Close</onright>
				<itemgap>0</itemgap>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<!-- Dummy to set focus to top -->
				<control type="button" id="6001">
					<width>0</width>
					<height>-1</height>
					<label></label>
					<onfocus>Down</onfocus>
					<visible>False</visible>
				</control>
				<control type="button" id="6002">
					<include>shutdown_buttons</include>
					<label>Exit Phenomenal</label>
					<onclick>ActivateWindow(10001,&quot;plugin://plugin.program.chef20/?description=Force%20Close%20Kodi&amp;fanart=C%3a%5cUsers%5cjeddi%5cAppData%5cRoaming%5cKodi%5caddons%5cplugin.program.chef20%5cresources%5cfanart.jpg&amp;icon=C%3a%5cUsers%5cjeddi%5cAppData%5cRoaming%5cKodi%5caddons%5cplugin.program.chef20%5cresources%5cicon.png&amp;mode=18&amp;name=Force%20Close&amp;name2&amp;url&amp;version&quot;,return)</onclick>
					<visible>System.ShowExitButton</visible>
				</control>
				<control type="button" id="6003">
					<include>shutdown_buttons</include>
					<label>13012</label>
					<onclick>Quit</onclick>
					<visible>System.ShowExitButton</visible>
				</control>
				<control type="button" id="6004">
					<include>shutdown_buttons</include>
					<label>13011</label>
					<onclick>XBMC.Suspend()</onclick>
					<visible>System.CanSuspend</visible>
				</control>
				<control type="button" id="6005">
					<include>shutdown_buttons</include>
					<label>13010</label>
					<onclick>XBMC.Hibernate()</onclick>
					<visible>System.CanHibernate</visible>
				</control>
				<control type="button" id="6006">
					<include>shutdown_buttons</include>
					<label>13013</label>
					<onclick>XBMC.Reset()</onclick>
					<visible>System.CanReboot</visible>
				</control>
				<control type="button" id="6007">
					<include>shutdown_buttons</include>
					<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
					<onclick>dialog.close(all,true)</onclick>
					<onclick>System.LogOff</onclick>
					<visible>System.HasLoginScreen | Integer.IsGreater(System.ProfileCount,1)</visible>
					<visible>System.Loggedon</visible>
				</control>
				<control type="button" id="6008">
					<include>shutdown_buttons</include>
					<label>20046</label>
					<altlabel>20045</altlabel>
					<usealttexture>!System.IsMaster</usealttexture>
					<onclick>xbmc.mastermode</onclick>
					<visible>System.HasLocks</visible>
				</control>
				<control type="button" id="6009">
					<include>shutdown_buttons</include>
					<label>13017</label>
					<onclick>XBMC.InhibitIdleShutdown(true)</onclick>
					<visible>System.HasShutdown +!System.IsInhibit</visible>
				</control>
				<control type="button" id="6010">
					<include>shutdown_buttons</include>
					<label>13018</label>
					<onclick>XBMC.InhibitIdleShutdown(false)</onclick>
					<visible>System.HasShutdown + System.IsInhibit</visible>
				</control>
				<control type="button" id="6011">
					<include>shutdown_buttons</include>
					<label>20150</label>
					<onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
					<visible>!System.HasAlarm(shutdowntimer)</visible>
					<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
				</control>
				<control type="button" id="6012">
					<include>shutdown_buttons</include>
					<label>20151</label>
					<onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
					<visible>System.HasAlarm(shutdowntimer)</visible>
				</control>
				<control type="label" id="6013">
					<include>shutdown_buttons</include>
					<label>$INFO[System.Alarmpos,Timer-]</label>
					<visible>System.HasAlarm(shutdowntimer)</visible>
				</control>
				<control type="button" id="6014">
					<include>shutdown_buttons</include>
					<label>13014</label>
					<onclick>Dialog.Close(shutdownmenu)</onclick>
					<onclick>XBMC.Minimize()</onclick>
					<visible>!System.Platform.Linux</visible>
				</control>
				<control type="button" id="6016">
					<include>shutdown_buttons</include>
					<label>20183</label>
					<onclick>Dialog.Close(shutdownmenu)</onclick>
					<onclick>ReloadSkin()</onclick>
				</control>
				<control type="button" id="6015">
					<include>shutdown_buttons</include>
					<label>5</label>
					<onclick>ActivateWindow(Settings)</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>
