<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onunload>ActivateWindow(fullscreenvideo)</onunload>
	<onback>ActivateWindow(VideoOSD)</onback>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(VideoOSD)</visible>
			<control type="group"> <!-- UPPER PART -->
				<animation effect="zoom" start="0,879,1920,1" end="0,0,1920,1080" delay="210" time="100">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="zoom" start="0,0,1920,1080" end="0,879,1920,0" time="100"/>
					<effect type="fade" end="0" delay="100" time="0"/>
				</animation>
				<control type="group">
					<posx>0</posx>
					<posy>570</posy>
					<control type="image">
						<description>UP - Background Image</description>
						<posx>0</posx>
						<posy>229</posy>
						<width>1920</width>
						<height>80</height>
						<texture background="true">osd/osd_nf.png</texture>
					</control>	
				</control>
			</control>
			<control type="group">
				<posy>780</posy>
				<animation effect="slide" start="600,0" delay="200" end="0,0" time="200">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="600,0" delay="0" time="100">WindowClose</animation>
				<control type="label">
					<posx>1880</posx>
					<posy>35</posy>
					<width>1300</width>
					<height>38</height>
					<label>$INFO[VideoPlayer.Title]</label>
					<scroll>true</scroll>
					<scrollspeed>40</scrollspeed>
					<align>right</align>
					<aligny>center</aligny>
					<font>font-32</font>
					<textcolor>white</textcolor>
				</control>
			</control>

			<control type="group">
				<posx>260</posx>
				<posy>780</posy>
				<animation effect="slide" start="-600,0" delay="200" end="0,0" time="200">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="-600,0" delay="0" time="100">WindowClose</animation>
				<control type="label">
					<description>Duration</description>
					<posx>0</posx>
					<posy>20</posy>
					<width>1200</width>
					<height>38</height>
					<label>[COLOR=grey_a]$INFO[Player.FinishTime][/COLOR] [COLOR=grey_b]$LOCALIZE[31050]:[/COLOR] [COLOR=grey_a]$INFO[System.Time][/COLOR] [COLOR=grey_b]$LOCALIZE[19030]:[/COLOR]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-17</font>
					<textcolor>grey_a</textcolor>
				</control>
				<control type="label">
					<description>time label</description>
					<posx>0</posx>
					<posy>55</posy>
					<width>300</width>
					<height>38</height>
					<label>$INFO[VideoPlayer.Time][COLOR=grey_b][B] / [/B][/COLOR]$INFO[Player.Duration]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font-17</font>
					<textcolor>grey_a</textcolor>
				</control>
			</control>

			<control type="group"><!-- BOTTOM PART  -->
				<animation effect="slide" start="0,203" end="0,0" time="200">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="0,283" delay="100" time="200">WindowClose</animation>
				<control type="group">
					<posx>0</posx>
					<posy>570</posy>
					<control type="image">
						<description>BOTTOM - background image</description>
						<posx>0</posx>
						<posy>309</posy>
						<width>1920</width>
						<height>203</height>
						<texture background="true">osd/line_down.png</texture>
					</control>				
					<include>OSD_artsize</include>
				</control>

				<control type="textbox">
					<description>Plot</description>
					<posx>360</posx>
					<posy>880</posy>
					<width>1520</width>
					<height>200</height>
					<textcolor>grey_a</textcolor>
					<label>$VAR[OSD_Plot]</label>
					<align>right</align>
					<font>font-22</font>
				</control>
			</control>
		</control>
	</controls>
</window>
