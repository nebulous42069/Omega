<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(startup)</visible>
			<control type="group">
				<posx>645</posx>
				<animation effect="slide" start="0,-80" end="0,0" tween="circle" easing="out" delay="400" time="300">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="0,-80" delay="0" time="300">WindowClose</animation>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>630</width>
					<height>70</height>
					<texture colordiffuse="black" diffuse="glass.jpg" background="true">main/tab.png</texture>
					<bordertexture colordiffuse="$VAR[main_color]">main/tab_stroke.png</bordertexture>
					<bordersize>1,0,1,1</bordersize>
				</control>
				<control type="image" id="400">
					<description>avatar</description>
					<posx>35</posx>
					<posy>2</posy>
					<width>56</width>
					<height>56</height>
					<aspectratio>keep</aspectratio>
					<texture>defaulticoninfo.png</texture>
				</control>
				<control type="label" id="401">
					<description>Line 1 Label</description>
					<posx>105</posx>
					<posy>3</posy>
					<width>450</width>
					<height>24</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>font-18</font>
					<textcolor>grey_b</textcolor>
				</control>
				<control type="label" id="402">
					<description>Line 2 Label</description>
					<posx>105</posx>
					<posy>33</posy>
					<width>450</width>
					<height>24</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>font-18</font>
					<scroll>true</scroll>
					<textcolor>grey</textcolor>
				</control>
			</control>
		</control>
	</controls>
</window>
