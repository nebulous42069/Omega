<include content="Dialog_Menu_Button">
    <param name="id">$MATH[{item_x} + 8001]</param>
    <param name="groupid">$MATH[{item_x} + 8101]</param>
    <param name="control">button</param>
    <param name="icon">{item_icon}</param>
