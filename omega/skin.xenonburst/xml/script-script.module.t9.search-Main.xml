<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">9090</defaultcontrol>
    <controls>
        <control type="group">
            <animation effect="slide" start="0,0" end="-450,0" time="300" tween="quadratic" easing="out">WindowClose</animation>
            <animation effect="slide" start="-75,0" end="0,0" time="225" tween="quadratic" easing="out">WindowOpen</animation>
            <control type="image">
                <left>-30</left>
                <top>0</top>
                <width>420</width>
                <height>1080</height>
                <texture border="0,0,10,0">MediaBladeSub.png</texture>
            </control>
            <control type="image">
                <description>LOGO</description>
                <left>60</left>
                <top>15</top>
                <width>225</width>
                <height>82</height>
                <aspectratio>keep</aspectratio>
                <texture>Xonfluence_Logo.png</texture>
            </control>
            <control type="panel" id="9090">
                <left>22</left>
                <top>90</top>
                <width>312</width>
                <height>450</height>
                <onleft>9090</onleft>
                <onright>Action(Close)</onright>
                <onup condition="Integer.IsGreater(Container(9091).NumItems,0)">Control.SetFocus(9091,999)</onup>
                <ondown condition="Integer.IsGreater(Container(9091).NumItems,0)">Control.SetFocus(9091,0)</ondown>
                <orientation>vertical</orientation>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="82" width="90">
                    <control type="image">
                        <left>0</left>
                        <top>21</top>
                        <width>90</width>
                        <height>82</height>
                        <texture border="5">KeyboardKeyNF.png</texture>
                    </control>
                    <control type="label">
                        <left>0</left>
                        <top>6</top>
                        <width>90</width>
                        <height>82</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>0</left>
                        <top>28</top>
                        <width>90</width>
                        <height>82</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="165" width="180">
                    <control type="image">
                        <left>0</left>
                        <top>21</top>
                        <width>90</width>
                        <height>82</height>
                        <texture colordiffuse="$VAR[MainColorOne]" border="5">KeyboardKey.png</texture>
                    </control>
                    <control type="label">
                        <left>0</left>
                        <top>6</top>
                        <width>90</width>
                        <height>82</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>0</left>
                        <top>28</top>
                        <width>90</width>
                        <height>82</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="list" id="9091">
                <left>22</left>
                <top>600</top>
                <width>300</width>
                <height>450</height>
                <onleft>9091</onleft>
                <onright>Action(Close)</onright>
                <onup>9090</onup>
                <ondown>9090</ondown>
                <orientation>vertical</orientation>
                <scrolltime tween="quadratic" easing="out">200</scrolltime>
                <itemlayout height="45" width="300">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>300</width>
                        <height>45</height>
                        <texture border="5">KeyboardKeyNF.png</texture>
                    </control>
                    <control type="label">
                        <left>15</left>
                        <top>3</top>
                        <width>270</width>
                        <height>39</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="45" width="300">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>300</width>
                        <height>45</height>
                        <texture border="5">KeyboardKeyNF.png</texture>
                        <visible>!Control.HasFocus(9091)</visible>
                    </control>
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>300</width>
                        <height>45</height>
                        <texture colordiffuse="$VAR[MainColorOne]" border="5">KeyboardKey.png</texture>
                        <visible>Control.HasFocus(9091)</visible>
                    </control>
                    <control type="label">
                        <left>15</left>
                        <top>3</top>
                        <width>270</width>
                        <height>39</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="label" id="600">
                <left>22</left>
                <top>525</top>
                <width>300</width>
                <height>60</height>
                <align>center</align>
                <textoffsetx>8</textoffsetx>
                <textcolor>white</textcolor>
                <scroll>true</scroll>
                <scrollspeed>20</scrollspeed>
            </control>
        </control>
    </controls>
</window>
