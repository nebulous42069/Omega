            <height>40</height>
            <include content="BingieUnfocusedWidgetFade">
                <param name="widgetid" value="$PARAM[widgetid]" />
            </include>
            <include>BingieNoCircularWidgetHeaderAnim</include>
            <!-- fixed focus navigation -->
            <include content="SetFixedVerticalNavigationProps">
                <param name="widgetid" value="$PARAM[widgetid]"/>
            </include>
            <include content="Fixed_Focus_Navigation_Factory">
                <param name="widgetid" value="$PARAM[widgetid]"/>
            </include>
            <include content="Hub_Widget_Label">
                <param name="widgetid" value="$PARAM[widgetid]" />
                <param name="visibility" value="String.IsEmpty(Container($PARAM[widgetid]).ListItem.Property(similartitle)) + String.IsEmpty(Container($PARAM[widgetid]).ListItem.Property(genretitle))" />
                <param name="label" value="$INFO[Skin.String($PARAM[skinsetting].label)]" />
            </include>
            <include content="Hub_Widget_Label">
                <param name="widgetid" value="$PARAM[widgetid]" />
                <param name="visibility" value="!String.IsEmpty(Container($PARAM[widgetid]).ListItem.Property(similartitle)) | !String.IsEmpty(Container($PARAM[widgetid]).ListItem.Property(genretitle))" />
                <param name="label" value="$INFO[Container($PARAM[widgetid]).ListItem.Property(similartitle),$LOCALIZE[31586] ,]$INFO[Container($PARAM[widgetid]).ListItem.Property(genretitle)]" />
            </include>
            <!-- spinner -->
            <control type="multiimage">
                <top>7</top>
                <width>100%</width>
                <height>30</height>
                <include>widget_header_leftalign</include>
                <aspectratio align="left">keep</aspectratio>
                <imagepath background="true">spinner/widgets_busy_loader/</imagepath>
                <timeperimage>85</timeperimage>
                <colordiffuse>$INFO[Skin.String(WidgetSpinnerTextureColor)]</colordiffuse>
                <fadetime>0</fadetime>
                <visible>Container($PARAM[widgetid]).IsUpdating + Control.IsVisible($PARAM[widgetid]) + Integer.IsEqual(Container($PARAM[widgetid]).NumItems,0)</visible>
            </control>
        </control>
        <include content="Hub_Set_Widget_Button" condition="!Skin.HasSetting(LockHubWidgets) + !Window.IsActive(1114)">
            <param name="visibility" value="Skin.String($PARAM[skinsetting].label)" />
            <param name="label" value="$INFO[Skin.String($PARAM[skinsetting].label)]" />
            <param name="id" value="$PARAM[widgetid]4" />
            <param name="skinsetting" value="$PARAM[skinsetting]" />
        </include>
        <include content="Hub_Set_Widget_Button" condition="!Skin.HasSetting(LockHubWidgets) + !Window.IsActive(1114)">
            <param name="visibility" value="!Skin.String($PARAM[skinsetting].label)" />
            <param name="label" value="31506" />
            <param name="id" value="$PARAM[widgetid]5" />
            <param name="skinsetting" value="$PARAM[skinsetting]" />
        </include>
