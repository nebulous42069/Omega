    <include name="bingie_customhub_item">
        <control type="group" id="20$PARAM[widgetid]">
            <visible>Skin.String($PARAM[skinsetting].label)</visible>
            <visible>[Container($PARAM[widgetid]).IsUpdating + Control.IsVisible($PARAM[widgetid]) | Integer.IsGreater(Container($PARAM[widgetid]).NumItems,0)] + [Skin.HasSetting(LockHubWidgets) | Window.IsActive(1114)]</visible>
