<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>20</defaultcontrol>

	<controls>
		<include>fade_screen_grey</include>
		<control type="group">
			<posx>160</posx>
			<posy>80</posy>
			<include>dialog_zoom_animation</include>
			<include content="big_dialog">
				<param name="width" value="1600" />
			</include>
			<include content="right_shadow">
					<param name="posx" value="750" />
					<param name="posy" value="140" />
					<param name="width" value="20" />
					<param name="height" value="745" />
				</include>
			<control type="label">
				<description>heading label</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>1600</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<label>$VAR[DialogPVRChannelManagerHeader]</label>
				<textcolor>white</textcolor>
			</control>
 

			<control type="label"> 
				<left>0</left>
				<top>90</top>
				<width>800</width>
				<height>52</height>
				<font>font-20</font>
				<align>center</align>
				<aligny>center</aligny>
				<scroll>false</scroll>
				<textcolor>grey_b</textcolor>
				<label>[B]$LOCALIZE[19019][/B]</label>
			</control>
			<!-- Left list -->			
			<control type="list" id="20">
				<left>45</left>
				<top>160</top>
				<width>700</width>
				<height>700</height>
				<onup>20</onup>
				<ondown>20</ondown>
				<onleft>61</onleft>
				<onright>9000</onright>
				<pagecontrol>61</pagecontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<itemlayout width="700" height="66">
					<control type="group">
						<animation effect="fade" start="100" end="50" condition="!ListItem.Property(ActiveChannel)">Conditional</animation>
						<control type="image">
							<left>3</left>
							<top>3</top>
							<width>60</width>
							<height>60</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>red</textcolor>
							<selectedcolor>red</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>ListItem.Property(Changed)</visible>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>grey_b</textcolor>
							<selectedcolor>grey_b</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>!ListItem.Property(Changed)</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="700" height="66">
					<control type="group">
						<animation effect="fade" start="100" end="50" condition="!ListItem.Property(ActiveChannel)">Conditional</animation>
						<animation effect="fade" start="100" end="75" condition="!Control.HasFocus(20)">Conditional</animation>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>700</width>
							<height>66</height>
							<texture colordiffuse="$VAR[main_color]">white.png</texture>
						</control>
						<control type="image">
							<left>3</left>
							<top>3</top>
							<width>60</width>
							<height>60</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>white</textcolor>
							<selectedcolor>gold</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>ListItem.Property(Changed)</visible>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>white</textcolor>
							<selectedcolor>gold</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>!ListItem.Property(Changed)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>

						<control type="scrollbar" id="61">
				<posx>15</posx>
				<posy>160</posy>
				<width>10</width>
				<height>700</height>
				<include>scroll_bar</include>
				<onleft>9001</onleft>
				<onright>20</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="grouplist" id="9000">
				<left>780</left>
				<top>72</top>
				<width>800</width>
				<height>660</height>
				<itemgap>0</itemgap>
				<onleft>20</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>4</ondown>
				<orientation>vertical</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<!-- Channel options header -->
				<control type="label" id="100">
					<posx>0</posx>
					<width>800</width>
					<height>66</height>
					<align>center</align>
					<label>$LOCALIZE[33063]</label>
				</control>

				<!-- Channel activated -->
				<control type="radiobutton" id="7">
					<width>800</width>
					<label>19074</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<focusedcolor>white</focusedcolor>
					<textcolor>white</textcolor>
					<texturenofocus>-</texturenofocus>
					<texturefocus colordiffuse="$VAR[main_color]">white.png</texturefocus>
					<disabledcolor>grey_a</disabledcolor>
					<font>font-22</font>
					<textoffsetx>30</textoffsetx>
					<textwidth>900</textwidth>
				</control>

				<!-- Channel name -->
				<control type="edit" id="8">
					<label>19201</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<width>800</width>
					<textoffsetx>20</textoffsetx>
					<textwidth>760</textwidth>
					<include>button_spin_playlist</include>
				</control>

				<!-- Channel logo button -->
				<control type="button" id="9">
					<width>800</width>
					<label>19202</label>
					<posx>0</posx>
					<posy>0</posy>
					<align>left</align>
					<height>50</height>
					<include>button_spin_playlist</include>
				</control>

				<!-- Current channel logo -->
				<control type="image" id="10">
					<top>-50</top>
					<left>737</left>
					<width>50</width>
					<height>50</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>

				<!-- EPG activated -->
				<control type="radiobutton" id="12">
					<width>800</width>
					<label>19206</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<focusedcolor>white</focusedcolor>
					<textcolor>white</textcolor>
					<texturenofocus>-</texturenofocus>
					<texturefocus colordiffuse="$VAR[main_color]">white.png</texturefocus>
					<disabledcolor>grey_a</disabledcolor>
					<font>font-22</font>
					<textoffsetx>30</textoffsetx>
					<textwidth>900</textwidth>
				</control>

				<!-- EPG source -->
				<control type="spincontrolex" id="13">
					<width>800</width>
					<textwidth>760</textwidth>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<include>button_spin_playlist</include>
					<reverse>yes</reverse>
					<label>19200</label>
				</control>

				<!-- Parental locked -->
				<control type="radiobutton" id="14">
					<width>800</width>
					<label>19267</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<focusedcolor>white</focusedcolor>
					<textcolor>white</textcolor>
					<texturenofocus>-</texturenofocus>
					<texturefocus colordiffuse="$VAR[main_color]">white.png</texturefocus>
					<disabledcolor>grey_a</disabledcolor>
					<font>font-22</font>
					<textoffsetx>30</textoffsetx>
					<textwidth>900</textwidth>
				</control>

			</control>

			<!-- Button grouplist -->
			<control type="grouplist" id="9001">
				<posx>5</posx>
				<posy>890</posy>
				<align>left</align>
				<width>1590</width>
				<height>300</height>
				<itemgap>0</itemgap>
				<orientation>Horizontal</orientation>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onup>9000</onup>
				<ondown>noop</ondown>
