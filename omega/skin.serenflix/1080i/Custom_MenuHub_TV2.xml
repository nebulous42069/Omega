<?xml version="1.0" encoding="utf-8"?>
<window type="window" id="2114">
  <onload condition="!String.IsEqual(Window(Home).Property(BaseWindow),InfoDialog)">SetFocus(505)</onload>
  <onunload>ClearProperty(TMDBHelper.WidgetContainer,Home)</onunload>
  <controls>
      <include>Animation_Right</include>
      <include>object_menuhub_includes</include>
      <include condition="Skin.HasSetting(DisableSubMenuVert)">Home_TVHubMenu_Layout</include>
    <control type="label">
      <left>60</left>
      <top>40</top>
      <label>$LOCALIZE[31670]</label> <!-- Categories -->
      <height>40</height>
      <width>350</width>
      <align>left</align>
      <aligny>top</aligny>
      <textcolor>white</textcolor>
      <font>font_heading_small</font>
      <visible>Control.HasFocus(505) | Control.HasFocus(400)</visible>
    </control>
    <control type="button" id="5051">
     <centerleft>50%</centerleft>
     <centertop>50%</centertop>
     <width>500</width>
     <height>60</height>
     <label>$LOCALIZE[31671]</label> <!-- Hub Empty - Choose Items -->
     <textcolor>white</textcolor>
     <focusedcolor>White</focusedcolor>
     <texturefocus colordiffuse="$VAR[ColorHighlight]" border="16">common/white.png</texturefocus>
     <onclick>RunScript(script.skinshortcuts,type=manage&amp;group=x1102)</onclick>
     <visible>!Integer.IsGreater(Container(505).NumItems,0) + !Container(505).IsUpating</visible>
    </control>
    <control type="list" id="505">
      <animation effect="slide" start="-400,0" end="0,0" time="400">Visible</animation>
      <visible allowhiddenfocus="true">!Control.HasFocus(400)</visible>
      <onfocus condition="!Integer.IsGreater(Container(505).NumItems,0) + !Container(505).IsUpating">SetFocus(5051)</onfocus>
      <include>Animation_Right</include>
      <animation effect="slide" end="-540,0" time="500" delay="100" condition="ControlGroup(5055).HasFocus">Conditional</animation>
      <onright>5055</onright>
      <height>900</height>
      <top>140</top>
      <left>20</left>
      <onleft condition="Skin.HasSetting(DisableSubMenuVert)">SetFocus(400,1)</onleft>
      <onback>Skin.Reset(MovieHubMenuFocus)</onback>
      <onback>ActivateWindow(Home)</onback>
      <viewtype label="$LOCALIZE[31469]">icon</viewtype>
      <scrolltime tween="sine" easing="out">500</scrolltime>
      <itemgap>10</itemgap>
      
      <itemlayout width="480" height="75">
        <control type="group">
          <control type="label">
            <left>30</left>
            <label>$INFO[ListItem.Label]</label>
            <align>left</align>
            <font>font_small</font>
            <textcolor>dimgrey</textcolor>
          </control>
        </control>
      </itemlayout>
      <focusedlayout width="480" height="85">
        <control type="group">
          <control type="group">
            <height>70</height>
            <width>400</width>
            <left>10</left>
          </control>
          <control type="label">
            <left>30</left>
            <label>$INFO[ListItem.Label]</label>
            <align>left</align>
            <font>font_large_bold</font>
            <textcolor>white</textcolor>
          </control>
        </control>
      </focusedlayout>
      <content>
        <include>skinshortcuts-group-x1104</include>
      </content>
    </control>
    <control type="grouplist" id="5055">
      <include>Animation_Right</include>
      <animation effect="slide" end="-520,0" time="500" delay="100" condition="ControlGroup(5055).HasFocus">Conditional</animation>
      <left>520</left>
      <posy>620</posy>
      <width>100%</width>
      <onleft>505</onleft>
      <onback>505</onback>
      <orientation>vertical</orientation>
      <include>skinshortcuts-template-x1104</include>
    </control>
  </controls>
</window>
