<contents>
    <value name="submenu_item_x">{item_x}</value>
    <value name="submenu_widget_id">$MATH[{submenu_item_x} * 1000 + 601]</value>
    <value name="submenu_path">{item_submenulist_path}</value>
    <value name="submenu_target">{item_submenulist_target}</value>
    <value name="submenu_limit">{item_submenulist_limit}</value>
    <value name="submenu_sortby">{item_submenulist_sortby}</value>
    <rules name="submenu_sortorder">
        <rule>
            <condition>{item_submenulist_sortorder}==True</condition>
            <value>descending</value>
        </rule>
        <rule>
            <condition>True</condition>
            <value>ascending</value>
        </rule>
    </rules>
</contents>